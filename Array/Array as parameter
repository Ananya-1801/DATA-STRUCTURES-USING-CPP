//WAP IN C++ TO DESIGN A FUNCTION TO GENERATE AN ARRAY OF N NATURAL NUMBERS AND DISPLAY IT.

#include <iostream>
using namespace std;

int * fun(int size)  //function of type pointer takes size as parameter
{
    int *p;
    p= new int[size]; //array pointer 

    for(int i=0;i<size;i++)
    {
        p[i]=i+1;
    }

    return p;
}

int main()
{
    int *ptr;
    int n;
    cout<<"Enter the size of the array to store natural numbers:";
    cin>>n;
    ptr=fun(n);

    for(int i=0;i<n;i++)
    {
        cout<<ptr[i]<<endl;
    }
    delete []ptr;
        return 0;
}
